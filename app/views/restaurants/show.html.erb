<!-- <div class="content"> -->
  <div class="container">

<div class="row">
<div class="col-lg-3">
  <h1>
  <p>
    <strong>
    <%= @restaurant.name %>
    </strong>
  </p>
  </h1>

  <h3>
  <p>
    <%= @restaurant.description %>
  </p>
</h3>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
<h4>Add a review:</h4>

<%= render 'reviews/form', review: @review %>
</div>
<div class="col-lg-5">
  <h2>Reviews</h2>
  <table>
    <tbody>
      <% @restaurant.reviews.each do |review| %>
        <tr>
          <td><%= review.rating %></td>
          <td><%= review.comments %></td>
          <td><%= link_to 'Show', restaurant_review_path(@restaurant, review) %></td>
          <td><%= link_to 'Destroy', restaurant_review_path(@restaurant, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
<div class="row align-self-end">
  <div class="col-lg-6">
    <p id="notice"><%= notice %></p>
  </div>
</div>
</div>
