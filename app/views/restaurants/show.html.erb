<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <h1>
        <p style="color: #CD501B">
          <strong>
            <%= @restaurant.name %>
          </strong>
        </p>
      </h1>

      <h3>
        <p>
          <%= @restaurant.description %>
        </p>
      </h3>
      <% if current_user == @restaurant.user %>
        <%= button_to 'Edit', edit_restaurant_path(@restaurant), method: :get %>
        <%= button_to 'Delete', @restaurant, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>

      <div align='left'>
        <div class="star-rating-display">
          <div class="top-stars" style="width: <%=@restaurant.average_rating%>%"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
          <div class="bottom-stars"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
        </div>
        <h5>Average Rating: <%=(@restaurant.average_rating/20).round(1)%>/5.0</h5>
      </div>

    <% if @restaurant.user != current_user && not_already_reviewed? %>
      <h4>Add a review:</h4>
      <%= render 'reviews/form', review: @review %>
    <% end %>
    </div>

    <div class="col-lg-5">
      <h2>Reviews</h2>
      <table>
        <tbody>

          <% @restaurant.reviews.each do |review| %>
          <% if review.id %>
            <tr>
              <td><%= review.rating %></td>
              <td><%= review.comments %></td>
              <td><%= review.user ? review.user.username : "Anonymous" %></td>
              <% if current_user == review.user %>
              <td><%= link_to 'Delete', restaurant_review_path(@restaurant, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

    </div>

  <div class="row align-self-end">
    <div class="col-lg-6">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>
